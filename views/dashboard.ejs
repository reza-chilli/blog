<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>blog</title>

    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('partialls/sidebar') %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include('partialls/navbar') %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <% if(myBlog) { %>
                        <h3>My Blogs</h3>
                    <% } else { %>
                        <h3>All Blogs</h3>
                    <% } %>

                    <!-- Page Heading -->

                    <div class="row">

                        <% for(let i = 0; i < articles.length; i++) { %>
                            <div class="col-md-3 p-3">
                                <div class="card h-100">
                                    <img class="card-img-top" src="/img/read-book.png" alt="Card image cap" style="width: 100%;height: 15vw;">
                                    <div class="card-body">
                                      <h3 class="card-title"><%= articles[i].title%></h3>
                                      <hr>
                                      <p><%=articles[i].plainText%></p>
                                      

                                      <p class="card-text"><small>writen by <%=articles[i].writer.username%> at <%=new Date(+articles[i].createdAt).toString()%></small> </p>

                                    </div>
                                    <a href="/dashboard/article<%=articles[i]._id%>" class="btn btn-primary">read article</a>
                                </div>

                            </div>
                        <% } %>



                    </div>

                    

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->



        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <%- include('partialls/logoutModal') %>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin-2.min.js"></script>

</body>

</html>